{
   "manifest_version": 3,
   "name": "魔理沙浏览器桌宠",
   "version": "0.1",
   "action": {
      "default_title": "Click to view a popup",
      "default_popup": "popup.html"
   },
   "description": "Build an Extension!",
   "icons": {
      "48": "img/icon48.png",
      "96": "img/icon96.png"
  },
   "author": "dai0v0",
   "background": {
      "service_worker": "lib/background.js"
   },
   "content_scripts": [{
         "css": [ "css/style.css" ],
         "js": [ "lib/jquery.min.js", "lib/tools.js", "lib/index.js" ],
         "matches": [ "<all_urls>" ],
         "run_at": "document_idle"
   }],
   "host_permissions": [
      "http://*/*",
      "https://*/*"
   ],
   "permissions": [ "storage" ],
   "web_accessible_resources": [{
      "resources": ["img/*"],
      "matches": ["<all_urls>"]
   }],
   "omnibox": { "keyword" : "go" }
}